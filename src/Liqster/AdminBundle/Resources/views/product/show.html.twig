{% extends '@Admin/base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Create</th>
            <td>{% if product.create %}{{ product.create|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Modification</th>
            <td>{% if product.modification %}{{ product.modification|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Period</th>
            <td>{{ product.period }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ product.type }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_product_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_product_edit', { 'id': product.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
