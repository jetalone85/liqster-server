{% extends '@LiqsterHomePage/base.html.twig' %}

{% block header %}
<section class="hero is-fullheight is-light is-bold">
    <div class="hero-body">
        <div class="container">
            <div class="columns">
                <h2 class="title">Tutaj możesz edytować swoje dane, oraz skontrolować swoje płatności i
                    bezpieczeństwo! </h2>
            </div>
            <div class="columns">
                <div class="column is-one-quarter">
                    <div class="card">
                        <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{ user.username }}<i
                                class="material-icons right"></i></span>
                            <ul class="">
                                <li><a class="collection-item" href="{{ path('profile_index') }}"><h2>Edytuj dane</h2>
                                    </a>
                                </li>
                                <li><a class="collection-item" href="{{ path('profile_setting') }}"><h2>Zmień hasło</h2>
                                    </a>
                                </li>
                                <li><a class="collection-item" href="{{ path('profile_notifications') }}"><h2>
                                            Powiadomienia
                                            email</h2></a></li>
                                <li><a class="collection-item" href="{{ path('profile_billing') }}"><h2>Płatności</h2>
                                    </a>
                                </li>
                                <li><a class="collection-item" href="{{ path('profile_deactivatedAccounts') }}"><h2>
                                            Dezaktywowane konta</h2>
                                    </a>
                                </li>
                                <li><a class="collection-item" href="{{ path('profile_security') }}"><h2>
                                            Bezpieczeństwo</h2>
                                    </a></li>
                            </ul>
                        </div>
                    </div>

                </div>
                {% endblock %}

                {% block body %}

                <div class="column">
                    <div class="card">
                        <div class="card-content">
                            {% block body_on_single_page %}

                                <div class="columns">
                                    <div class="column">
                                        <h4>Edycja danych</h4>

                                        {{ form_start(edit_form) }}

                                        <div class="field is-horizontal">
                                            <div class="field-label is-normal">
                                                {{ form_label(edit_form.username, null, {'label_attr': {'class': 'label'}}) }}
                                            </div>
                                            <div class="field-body">
                                                <div class="field">
                                                    <p class="control is-expanded has-icons-left">
                                                        {{ form_widget(edit_form.username, { 'attr': {'class': 'input' } }) }}
                                                        <span class="icon is-small is-left"><i
                                                                    class="fa fa-user"></i></span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="field is-horizontal">
                                            <div class="field-label is-normal">
                                                {{ form_label(edit_form.email, null, {'label_attr': {'class': 'label'}}) }}
                                            </div>
                                            <div class="field-body">
                                                <div class="field">
                                                    <p class="control is-expanded has-icons-left">
                                                        {{ form_widget(edit_form.email, { 'attr': {'class': 'input' } }) }}
                                                        <span class="icon is-small is-left"><i
                                                                    class="fa fa-envelope"></i></span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="field is-grouped is-pulled-right">
                                            <p class="control">
                                                <input class="button is-primary is-centered" type="submit" id="_submit"
                                                       name="_submit"
                                                       value="Zapisz"/>
                                            </p>
                                        </div>

                                        {{ form_widget(edit_form) }}
                                        {{ form_end(edit_form) }}
                                    </div>
                                </div>

                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}


{% block javascripts_on_single_page %}

    <script>
    </script>

{% endblock %}
