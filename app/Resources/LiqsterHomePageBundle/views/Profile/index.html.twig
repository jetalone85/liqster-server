{% extends '@LiqsterHomePage/base.html.twig' %}

{% block header %}
<section class="hero is-fullheight is-light is-bold">
    <div class="hero-body">
        <div class="container">
            <div class="columns">
                <h2 class="title">W panelu użytkownika znajdziesz informację na temat, oraz możliwości edycji, Twojego
                    profilu użytkownika.</h2>
            </div>
            <div class="columns">
                <div class="column is-one-quarter">
                    <div class="menu">
                        <div class="menu-label">{{ user.username }}</div>
                        <ul class="menu-list">
                            <li><a class="collection-item" href="{{ path('profile_index') }}">Edytuj dane</a></li>
                            <li><a class="collection-item" href="{{ path('profile_setting') }}">Zmień hasło</a></li>
                            <li><a class="collection-item" href="{{ path('profile_notifications') }}">Powiadomienia
                                    email</a></li>
                            <li><a class="collection-item" href="{{ path('profile_billing') }}">Płatności</a></li>
                            <li><a class="collection-item" href="{{ path('profile_deactivatedAccounts') }}">Dezaktywowane
                                    konta</a>
                            </li>
                            <li><a class="collection-item" href="{{ path('profile_security') }}">Bezpieczeństwo</a></li>
                        </ul>
                    </div>
                </div>


                {% endblock %}

                {% block body %}

                <div class="column">
                    <div class="card">
                        <div class="card-content">
                            {% block body_on_single_page %}

                                <div class="columns">
                                    <div class="column">
                                        <h4>Edycja danych</h4>

                                        {{ form_start(edit_form) }}

                                        <div class="field is-horizontal">
                                            <div class="field-label is-normal">
                                                {{ form_label(edit_form.username, null, {'label_attr': {'class': 'label'}}) }}
                                            </div>
                                            <div class="field-body">
                                                <div class="field">
                                                    <p class="control is-expanded has-icons-left">
                                                        {{ form_widget(edit_form.username, { 'attr': {'class': 'input' } }) }}
                                                        <span class="icon is-small is-left"><i
                                                                    class="fa fa-user"></i></span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="field is-horizontal">
                                            <div class="field-label is-normal">
                                                {{ form_label(edit_form.email, null, {'label_attr': {'class': 'label'}}) }}
                                            </div>
                                            <div class="field-body">
                                                <div class="field">
                                                    <p class="control is-expanded has-icons-left">
                                                        {{ form_widget(edit_form.email, { 'attr': {'class': 'input' } }) }}
                                                        <span class="icon is-small is-left"><i
                                                                    class="fa fa-envelope"></i></span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="field is-grouped is-pulled-right">
                                            <p class="control">
                                                <input class="button is-primary is-centered" type="submit" id="_submit"
                                                       name="_submit"
                                                       value="Zapisz"/>
                                            </p>
                                        </div>

                                        {{ form_widget(edit_form) }}
                                        {{ form_end(edit_form) }}
                                    </div>
                                </div>

                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}


{% block javascripts_on_single_page %}

    <script>
    </script>

{% endblock %}
