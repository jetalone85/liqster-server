{% extends '@LiqsterHomePage/base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="container">

            <div class="jumbotron">
                <h1 class="display-4">Hello, world!</h1>
                <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra
                    attention to featured content or information.</p>
                <hr class="my-4">
                <p>It uses utility classes for typography and spacing to space content out within the larger
                    container.</p>
                <p class="lead">
                    <a class="btn btn-primary btn-lg" href="{{ path('account_new') }}" role="button">Dodaj nowe
                        konto</a>
                </p>
            </div>

        </div>

        <div class="container">
            <div class="card-group">
                {% for account in accounts %}
                    <div class="card w-100">

                        <div class="card-block">
                            <h2 class="card-title center-block text-center">{{ account.name }}</h2>
                        </div>

                        <div class="card-block">
                            <form name="form" method="post">
                                <input
                                        type="hidden"
                                        name="form[id]"
                                        value="{{ account.id }}"
                                />

                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" name="form[enable]"
                                           id="form_enable_{{ account.id }}"
                                           {% if account.cronJob.enabled %}checked{% endif %}
                                           class="custom-control-input">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Konto aktywne</span>
                                </label>

                                <input
                                        class="btn btn-outline-primary btn-block"
                                        type="submit"
                                        value="zapisz"/>

                            </form>
                        </div>

                        <div class="card-block">
                            <a class="btn btn-outline-info btn-blockcard-link"
                               href="{{ path('account_show', { 'id': account.id }) }}" role="button">Szczegóły</a>
                        </div>

                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
