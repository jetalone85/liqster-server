{% extends '@LiqsterHomePage/base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="container">

            <div class="jumbotron">
                <h1 class="display-4">Hello, world!</h1>
                <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra
                    attention to featured content or information.</p>
                <hr class="my-4">
                <p>It uses utility classes for typography and spacing to space content out within the larger
                    container.</p>
                <p class="lead">
                    <a class="btn btn-primary btn-lg" href="{{ path('account_new') }}" role="button">Dodaj nowe
                        konto</a>
                </p>
            </div>

        </div>

        <div class="container">
            <div class="card-group">
                {% for account in accounts %}
                    <div class="card w-100">
                        <div class="card-block">
                            <h4 class="card-title">{{ account.name }}</h4>
                        </div>

                        <form name="form" method="post">

                            <label for="form_enable_{{ account.id }}">
                                Czy aktywne:
                            </label>
                            <input
                                    type="hidden"
                                    name="form[id]"
                                    value="{{ account.id }}"
                            />
                            <input
                                    type="checkbox"
                                    {% if account.cronJob.enabled %}checked{% endif %}
                                    id="form_enable_{{ account.id }}"
                                    name="form[enable]"
                            />
                            <input type="submit" value="zapisz"/>

                        </form>

                        <div class="card-block">
                            <a href="{{ path('account_show', { 'id': account.id }) }}" class="card-link">Szczegóły</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
