{% extends '@LiqsterHomePage/base.html.twig' %}

{% block body %}
    <section class="hero is-fullheight is-light is-bold">
        <div class="container">
            <div class="columns">

                {% if accounts %}

                    {% for account in accounts %}

                        <div class="column account
                            {% if accounts|length == 1 %}is-half-tablet is-offset-one-quarter-tablet{% endif %}
                            {% if accounts|length == 2 %}is-half-tablet{% endif %}
            ">

                            <div class="card">
                                <div class="card-content">
                                    <div class="columns is-vcentered">
                                        <div class="column is-one-third">
                                            <div class="image is-128x128 avatar">
                                                <a href="{{ path('account_check', { 'id': account.id }) }}">
                                                    {% if account.image %}
                                                        <img src="{{ account.image }}">
                                                    {% else %}
                                                        <img src="http://images-eds.xboxlive.com/image?url=z951ykn43p4FqWbbFvR2Ec.8vbDhj8G2Xe7JngaTToBrrCmIEEXHC9UNrdJ6P7KIoIeJ1sl4QgwrJRGcdRHOCmsobfL9hBP8frB3waE_21t4XQhz7nbuJVLk9U7_AtXf&format=png">
                                                    {% endif %}
                                                </a>
                                            </div>
                                        </div>
                                        <div class="column name">
                                            <p class="title is-bold"><a
                                                        href="{{ path('account_check', { 'id': account.id }) }}">{{ account.name }}</a>
                                            </p>
                                            <p class="subtitle">{{ account.accountInstagramCache.valueAsArray.user.full_name }}</p>
                                            <p class="tagline">{{ account.accountInstagramCache.valueAsArray.user.biography }}</p>
                                        </div>
                                    </div>
                                </div>
                                <footer class="card-footer">

                                    <a class="card-footer-item"
                                       href="{{ path('account_check', { 'id': account.id }) }}">
                                        <span class="icon is-medium"><i class="fa fa-cog"></i></span>
                                        <span>Szczegóły</span>
                                    </a>

                                    <a class="card-footer-item" href="{{ path('result_list', { 'id': account.id }) }}">
                                        <span class="icon is-medium"><i class="fa fa-bullseye"></i></span>
                                        <span>Śledź aktywność</span>
                                    </a>

                                </footer>
                            </div>
                        </div>

                    {% endfor %}


                {% endif %}
            </div>

            {% if accounts|length <= 1 %}

            <div class="columns is-full is-fullwidth">
                <div class="column is-half-tablet is-offset-one-quarter-tablet">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-header-title">Dziękujemy za Twoje zaufanie! Możesz jeszcze dodać dodatkowe
                                konto.
                            </div>
                        </div>

                        <div class="card-content">
                            <a class="button is-primary is-medium" href="{{ path('account_new') }}" role="button">Dodaj
                                nowe konto!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% endif %}

    </section>

{% endblock %}

{% block javascripts_on_single_page %}

{% endblock %}
