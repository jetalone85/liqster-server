{% extends '@LiqsterHomePage/base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="container">

            <div class="row">
                <ul>
                    <li>
                        <a href="{{ path('account_new') }}">Dodaj nowe konto</a>
                    </li>
                </ul>
            </div>

            <div class="row">
                {% for account in accounts %}
                    <div class="card card-cascade wider">

                        <div class="view overlay hm-white-slight">
                            <img src="{{ account.image }}"
                                 class="img-fluid" alt="" width="100" height="100">
                        </div>

                        <h4 class="card-title"><a
                                    href="{{ path('account_show', { 'id': account.id }) }}">{{ account.name }}</a>
                        </h4>

                        <p class="card-text">Może statystyki? ...</p>
                        <a class="btn btn-primary"
                           href="{{ path('account_show', { 'id': account.id }) }}">Szczegóły</a>

                    </div>
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}
