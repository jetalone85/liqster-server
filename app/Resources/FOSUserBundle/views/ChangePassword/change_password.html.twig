{% extends '@LiqsterHomePage/base.html.twig' %}

{% block fos_user_content %}


    <section class="hero is-fullheight is-light is-bold">
        <div class="hero-body">
            <div class="container">
                <div class="columns">
                    <div class="column is-half is-offset-one-quarter is-vcentered is-centered">

                        <div class="card">
                            <div class="card-content">

                                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                                {{ form_widget(form) }}
                                <div>
                                    <input type="submit" value="{{ 'change_password.submit'|trans({}, 'main') }}"/>
                                </div>
                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock fos_user_content %}
