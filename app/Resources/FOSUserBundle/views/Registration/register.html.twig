{% extends '@LiqsterHomePage/base.html.twig' %}
{% form_theme form '@LiqsterHomePage/form/fields.html.twig' %}


{% block fos_user_content %}

    <section id="intro" class="full-section">
        <div class="view container-fluid">
            <div class="container input-field">
                <div class="row">

                    <div class="col s12 m12 l8 xl8 offset-l2 offset-xl2">

                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_label(form) }}

                        <input class="btn btn-large pink darken-3" type="submit"
                               value="{{ 'registration.submit'|trans({}, 'main') }}"/>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock fos_user_content %}
