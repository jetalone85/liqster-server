{% extends '@LiqsterHomePage/base.html.twig' %}
{% form_theme form '@LiqsterHomePage/form/fields.html.twig' %}


{% block fos_user_content %}

    <section id="intro" class="full-section flat-section">
        <div class="view container-fluid">
            <div class="container input-field">
                <div class="row">

                    <div class="col s12 m12 l8 xl8 offset-l2 offset-xl2 pink-text text-lighten-4">

                        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': ''}}) }}
                        {{ form_widget(form) }}
                        <div>
                            <input class="btn btn-primary" type="submit"
                                   value="{{ 'registration.submit'|trans({}, 'main') }}"/>
                        </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock fos_user_content %}
