{% extends '@LiqsterHomePage/base.html.twig' %}

{% block fos_user_content %}

    <div class="container input-field">
        <div class="row">

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="col l6 offset-l3">

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}

                    <div class="input-field">
                        <label for="username">{{ 'security.login.username'|trans({}, 'main') }}</label>
                        <input type="text" id="username" name="_username"
                               value="{{ last_username }}"
                        />
                    </div>

                    <div class="input-field">
                        <label for="password">{{ 'security.login.password'|trans({}, 'main') }}</label>
                        <input type="password" id="password" name="_password"
                        />
                    </div>

                    <div class="input-field">
                        <input class="btn btn-primary" type="submit" id="_submit" name="_submit"
                               value="{{ 'security.login.submit'|trans({}, 'main') }}"/>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
