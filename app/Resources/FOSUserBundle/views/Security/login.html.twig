{% extends '@LiqsterHomePage/base.html.twig' %}

{% block fos_user_content %}

    <section class="hero is-fullheight is-primary is-bold">
        <div class="hero-body">
            <div class="container">
                <div class="columns">
                    <div class="column is-half is-offset-one-quarter is-vcentered is-centered">

                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}


                        <div class="card">
                            <div class="card-content">

                                <form action="{{ path("fos_user_security_check") }}" method="post">
                                    {% if csrf_token %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                                    {% endif %}

                                    <div class="field is-horizontal">
                                        <div class="field-label is-normal">
                                            <label class="label"
                                                   for="username">{{ 'security.login.username'|trans({}, 'main') }}</label>
                                        </div>
                                        <div class="field-body">
                                            <div class="field">
                                                <p class="control is-expanded has-icons-left">
                                                    <input class="input" type="text" id="username" name="_username"
                                                           value="{{ last_username }}"
                                                    />
                                                    <span class="icon is-small is-left"><i
                                                                class="fa fa-user"></i></span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="field is-horizontal">
                                        <div class="field-label is-normal">
                                            <label class="label"
                                                   for="password">{{ 'security.login.password'|trans({}, 'main') }}</label>
                                        </div>
                                        <div class="field-body">
                                            <div class="field">
                                                <p class="control is-expanded has-icons-left">
                                                    <input class="input" type="password" id="password"
                                                           name="_password"/>
                                                    <span class="icon is-small is-left"><i
                                                                class="fa fa-key"></i></span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="field is-grouped is-pulled-right">
                                        <p class="control">
                                            <input class="button is-primary is-centered" type="submit" id="_submit"
                                                   name="_submit"
                                                   value="{{ 'security.login.submit'|trans({}, 'main') }}"/>
                                        </p>
                                    </div>
                                </form>
                            </div>
                            <div class="card-content">
                                <div class="center-align">
                                    <p>
                                        <span>Potrzebujesz pomocy w logowaniu?</span>
                                        <span><a href="#">Przypomnij hasło</a></span>
                                    </p>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="card-footer-item">
                                    <div class="center-align">
                                        <p>Nie masz konta? <a class=""
                                                              href="{{ path('fos_user_registration_register') }}">Zarejestruj
                                                się</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock fos_user_content %}
